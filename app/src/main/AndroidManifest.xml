<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bhisma.inventorysystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".MainActivity"
            android:name=".BarangActivity" />
        <activity
            android:parentActivityName=".MainActivity"
            android:name=".BahanBakuActivity" />
        <activity android:name=".SimpanBarangActivity" />
        <activity android:name=".SimpanBahanBakuActivity" />
        <activity android:name=".EditBarangActivity" />
        <activity android:name=".EditBahanBakuActivity"></activity>
    </application>

</manifest>