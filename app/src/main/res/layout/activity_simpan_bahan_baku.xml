<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpanBahanBakuActivity">

    <TextView
        android:id="@+id/txtMenuBahanBaku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Tambah Data Bahan Baku"/>

    <EditText
        android:id="@+id/idBahanBaku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id Bahan Baku"/>

    <EditText
        android:id="@+id/namaBahanBaku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Bahan Baku"/>

    <EditText
        android:id="@+id/hargaBahanBaku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Bahan Baku"/>

    <EditText
        android:id="@+id/stokBahanBaku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stok Bahan Baku"/>

    <Button
        android:id="@+id/simpanBahanBaku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan Data Bahan Baku"
        style="@style/Widget.AppCompat.Button.Colored"/>
</LinearLayout>